<% layout("layouts/boilerplate") %>
<body class="flex flex-col items-center  justify-center min-h-screen bg-gray-200">
    <div class="bg-white p-8 mt-10 rounded-xl shadow-xl text-center border-2 border-gray-300 w-96 relative">
        <!-- Ticket Header -->
        <div class="bg-red-500 text-white py-2 rounded-t-xl">
            <h2 class="text-2xl font-bold">ðŸŽŸ Movie Ticket ðŸŽŸ</h2>
        </div>

        <!-- Ticket Details -->
        <div class="p-4">
            <p class="text-lg font-semibold"><strong>Movie:</strong> <%= ticket.movie_title %></p>
            <p class="text-lg"><strong>Venue:</strong> <%= ticket.venue_name %> - <%= ticket.location %></p>
            <p class="text-lg"><strong>Showtime:</strong> <%= new Date(ticket.start_time).toLocaleString() %></p>
            <p class="text-lg"><strong>Seats:</strong> <span class="font-semibold text-green-600"><%= seats.join(", ") %></span></p>
            <div class="border-dashed border-t-2 border-gray-400 my-4"></div>
            <p class="text-xl font-semibold text-red-600"><strong>Total Price:</strong> â‚¹<%= (seats.length * ticket.price).toFixed(2) %></p>
        </div>

        <!-- Barcode -->
        <div class="flex justify-center mt-4">
            <div class="h-12 w-48 bg-gray-800 flex items-center justify-center rounded-md">
                <div class="w-3 h-10 bg-white mx-1"></div>
                <div class="w-2 h-10 bg-white mx-1"></div>
                <div class="w-3 h-10 bg-white mx-1"></div>
                <div class="w-1 h-10 bg-white mx-1"></div>
                <div class="w-4 h-10 bg-white mx-1"></div>
                <div class="w-2 h-10 bg-white mx-1"></div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="mt-6">
            <a href="/" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow-md transition">
                Back to Home
            </a>
        </div>

        <!-- Ticket Perforation Effect -->
        <div class="absolute -left-4 top-1/2 transform -translate-y-1/2 h-10 w-10 bg-gray-200 rounded-full border border-gray-400"></div>
        <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 h-10 w-10 bg-gray-200 rounded-full border border-gray-400"></div>
    </div>
</body>
