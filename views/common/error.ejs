<% layout("layouts/boilerplate") %>

<div class="flex justify-center items-center h-screen">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-lg text-center">
        
        <div class="mb-6">
            <img src="https://illustrations.popsy.co/white/resistance-band.svg" 
                 alt="Error Illustration"
                 class="mx-auto w-48">
        </div>

        <h1 class="text-3xl font-bold text-red-600">
            <%= statusCode === 404 ? "Page Not Found!" : "Something Went Wrong!" %>
        </h1>

        <p class="text-gray-700 mt-2">
            <strong>Status Code:</strong> <%= statusCode %>
        </p>
        <p class="text-gray-600 mt-1"><%= message %></p>

        <div class="mt-6 flex justify-center gap-4">
            <a href="/" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                🔄 Try Again
            </a>
            <a href="/" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition">
                🏠 Go Home
            </a>
        </div>
    </div>
</div>
