<% layout("layouts/boilerplate") %>
<body>
    <form action="/admin/venues/add" method="POST">
        <div class="bg-white p-6 rounded-lg shadow-md w-[500px] mx-auto mt-10">
            <h2 class="text-xl font-semibold mb-4 text-center">Add New Venue</h2>

            <div class="mb-4">
                <label class="block text-gray-700 font-bold">Venue Name:</label>
                <input type="text" name="vname" class="w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-400" required>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-bold">Location:</label>
                <input type="text" name="location" class="w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-400" required>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-bold">Capacity:</label>
                <input type="number" name="capacity" class="w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-400" required>
            </div>

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md mt-4 w-full">Add Venue</button>
        </div>
    </form>
</body>
</html>
