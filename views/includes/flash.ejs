<% if (success.length > 0 || error.length > 0) { %>
    <div class="container mx-auto mt-4 px-4">
        <% if (success.length > 0) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Success:</strong> <%= success %>
                <button class="absolute top-0 bottom-0 right-0 px-4 py-3 text-green-700 hover:text-green-900" onclick="this.parentElement.remove();">
                    &times;
                </button>
            </div>
        <% } %>

        <% if (error.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Error:</strong> <%= error %>
                <button class="absolute top-0 bottom-0 right-0 px-4 py-3 text-red-700 hover:text-red-900" onclick="this.parentElement.remove();">
                    &times;
                </button>
            </div>
        <% } %>
    </div>
<% } %>
